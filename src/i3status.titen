# ~/.i3status.conf
# configuration for the `i3status' utility which draws the status portion of the i3 bottom bar

## General setup for the whole bar

general {{
    colors = true
    interval = 1
    # for laptop (or older i3 where the battery clock cannot be formatted...)
    # interval = 5
}

## Set the order in which the items appear

order += "cpu_temperature 0"

# for laptop (XXX make this apply automatically on laptop)
# order += "wireless wlan0"
# order += "battery 0"

order += "load"
order += "tztime local"

## Configuration for the individual widgets themselves

cpu_temperature 0 {{
    format = "%degrees Â°C"
    path = "/sys/devices/platform/coretemp.0/temp1_input"
}

wireless wlan0 {{
    format_up = "%quality %essid %ip"
    format_down = "down"
}

battery 0 {{
    format = "%status %percentage %remaining"
    # otherwise the battery capacity is shown as a float, which makes no sense
    integer_battery_capacity = true
}

load {{
    # only really care about the 1 minute load averages at a glance
    format = "%1min"
}

tztime local {{
    # roughly ISO-8601 format, e.g. "Thu 1970-01-01 12:00 AM"
    format = "%a %Y-%m-%d %-I:%M %p"
}
